<Window x:Class="SV_final.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i ="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SV_final"
        mc:Ignorable="d"
        Title="Data Management Tool" Height="800" Width="900"
        Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical">
        <DockPanel>
            <Border Width="450" DockPanel.Dock="Left">
                <StackPanel>
                    <GroupBox Header="File Format Change" FontSize="17" FontWeight="Bold" Margin="3,3,3,3">
                        <StackPanel Orientation="Horizontal">
                            <TextBox Margin="3,10,5,5" Width="170"/>
                            <Button Content="..." Width="35" Margin="5,10,5,5"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Do task" FontSize="17" FontWeight="Bold" Margin="3,3,3,3">
                        <!-- Left side View Binding-->
                    </GroupBox>
                    <GroupBox Header="Image List" FontSize="17" FontWeight="Bold" Margin="3,3,3,3">
                        <ListBox>

                        </ListBox>
                    </GroupBox>
                </StackPanel>
            </Border>
            <Border Width="Auto" DockPanel.Dock="Right">
                <!-- Right side View Binding-->
            </Border>
        </DockPanel>
        <TextBlock x:Name="FileCount" Text="Default"/>
        <ListView x:Name="Data" Height="400" Width="Auto">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ShapeType" Width="70" DisplayMemberBinding="{Binding Path=ShapeType}"/>
                    <GridViewColumn Header="Type" Width="35" DisplayMemberBinding="{Binding Path=Type}"/>
                    <GridViewColumn Header="Height" Width="50" DisplayMemberBinding="{Binding Path=Height}"/>
                    <GridViewColumn Header="Width" Width="45" DisplayMemberBinding="{Binding Path=Width}"/>
                    <GridViewColumn Header="ShowRoof" Width="65" DisplayMemberBinding="{Binding Path=ShowRoof}"/>
                    <GridViewColumn Header="ExtendedPoint" Width="90" DisplayMemberBinding="{Binding Path=ExtendedPoint}"/>
                    <GridViewColumn Header="Side" Width="35" DisplayMemberBinding="{Binding Path=Side}"/>
                    <GridViewColumn Header="Direction" Width="55" DisplayMemberBinding="{Binding Path=Direction}"/>
                    <GridViewColumn Header="Bottom" Width="50" DisplayMemberBinding="{Binding Path=Bottom}"/>
                    <GridViewColumn Header="Right" Width="45" DisplayMemberBinding="{Binding Path=Right}"/>
                    <GridViewColumn Header="Top" Width="30" DisplayMemberBinding="{Binding Path=Top}"/>
                    <GridViewColumn Header="Left" Width="35" DisplayMemberBinding="{Binding Path=Left}"/>
                    <GridViewColumn Header="LeftCorX" Width="60" DisplayMemberBinding="{Binding Path=LeftCorX}"/>
                    <GridViewColumn Header="LeftCorY" Width="60" DisplayMemberBinding="{Binding Path=LeftCorY}"/>
                    <GridViewColumn Header="RightCorX" Width="75" DisplayMemberBinding="{Binding Path=RightCorX}"/>
                    <GridViewColumn Header="RightCorY" Width="75" DisplayMemberBinding="{Binding Path=RightCorY}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
